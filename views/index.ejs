<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <%- include('./partials/header.ejs') %>

    <div class="container mt-5">
      <form action="/addtask" method="post" class="d-flex">
        <input type="text" name="addtask" class="form-control" placeholder="Enter task here...">
        <input type="submit" value="Add Task" class="btn btn-success mx-2">
      </form>


    <ul class="list-group my-5">
      <% task.forEach(tasks => { %>
        <div class="row  mt-2">
            <div class="d-flex ">
              <li class="list-group-item w-75"><%= tasks.task %></li>
              <a href="/delete/<%= tasks._id %>" class="btn btn-danger mx-2 ">Delete Task</a>
            </div>
          <div class="col-md-3">
            
          </div >
        </div>
       <% }) %>
    
    </ul>
  </div>
  
      <%- include('./partials/footer.ejs') %>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>